%h1
  Module Descriptions
  %small Informatics (M.Sc.)
%table.uk-table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @module_descriptions.each do |module_description|
      %tr
        %td= module_description.name
        %td= link_to 'Show', module_description
        %td= link_to 'Edit', edit_module_description_path(module_description)
        %td= link_to 'Destroy', module_description, method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New Module', new_module_description_path
