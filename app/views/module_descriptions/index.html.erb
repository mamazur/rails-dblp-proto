<h1>Listing Module Descriptions
<small>Informatics (M.Sc.)</small></h1>


<table  class="table table-striped" > 
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @module_descriptions.each do |module_description| %>
      <tr>
        <td><%= module_description.name %></td>
        <td><%= link_to 'Show', module_description, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_module_description_path(module_description), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', module_description, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Module description', new_module_description_path %>
